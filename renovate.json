{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "regexManagers:dockerfileVersions"],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "fileMatch": [".+\\.nix$"],
      "matchStrings": [
        "\\s+image\\s+=\\s+\"(?<depName>.*?):(?<currentValue>.*?)\""
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:weekly"]
  },
  "nix": {
    "enabled": true
  }
}
