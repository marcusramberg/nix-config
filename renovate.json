{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "regexManagers:dockerfileVersions"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "modules/docker.nix"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*) depname=(?<depname>.*)\\n\\s*image\\s*=\\s*\"(?<currentvalue>.+)\""
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "nix": {
    "enabled": true
  }
}
